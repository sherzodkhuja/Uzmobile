<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/tarif_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/ic_round">

            <TextView
                android:id="@+id/sms_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/item_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sms_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30 Daqiqa"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/arrow"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="@dimen/_10sdp"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_weight="9"-->
                <!--                    android:src="@drawable/ic_arrow_down"-->
                <!--                    android:tag="down" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="@color/black">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Narxi: 10000 so'm" />

                <TextView
                    android:id="@+id/sms_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berilgan smslar soni: 1000" />

                <TextView
                    android:id="@+id/expire_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amal qilish muddati: 30 kun" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="#8C8A8A" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>